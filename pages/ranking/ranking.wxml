<!--pages/ranking/ranking.wxml-->
<view class="ranking-container">
  <!-- 标题区域 -->
  <view class="ranking-header">
    <text class="ranking-title">牌局排行榜</text>
  </view>

  <!-- 表头 -->
  <view class="table-header">
    <view class="header-cell rank-cell">排名</view>
    <view class="header-cell player-cell">玩家</view>
    <view class="header-cell score-cell">原始分数</view>
    <view class="header-cell multiplier-cell">倍率</view>
    <view class="header-cell final-cell">最终分数</view>
  </view>

  <!-- 排行榜列表 -->
  <view class="ranking-list">
    <block wx:for="{{rankings}}" wx:key="name">
      <view class="ranking-row">
        <!-- 排名 -->
        <view class="rank-cell">
          <text class="rank-number">{{index + 1}}</text>
        </view>
        
        <!-- 玩家信息 -->
        <view class="player-cell">
          <view class="player-avatar" style="background-color: {{item.color}}">
            <text class="avatar-text">{{item.avatar}}</text>
          </view>
          <text class="player-name">{{item.name}}</text>
        </view>
        
        <!-- 原始分数 -->
        <view class="score-cell">
          <text class="score-value {{item.originalScore >= 0 ? 'positive' : 'negative'}}">
            {{item.originalScore}}
          </text>
        </view>
        
        <!-- 倍率 -->
        <view class="multiplier-cell">
          <text class="multiplier-value">×{{item.multiplier}}</text>
        </view>
        
        <!-- 最终分数 -->
        <view class="final-cell">
          <text class="final-value {{item.finalScore >= 0 ? 'positive' : 'negative'}}">
            {{item.finalScore}}
          </text>
        </view>
      </view>
    </block>
  </view>

  <!-- 分享按钮 -->
  <view class="share-section">
    <button class="share-btn" bindtap="shareRanking">分享排行榜</button>
  </view>
</view>
