/* pages/ranking/ranking.wxss */

.ranking-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 标题区域 */
.ranking-header {
  background-color: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  text-align: center;
}

.ranking-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 表格布局 */
.table-header,
.ranking-row {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.table-header {
  padding: 16rpx 24rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #e9ecef;
}

.ranking-row {
  padding: 20rpx 24rpx;
  border: 1rpx solid #e9ecef;
}

.ranking-row:hover {
  background-color: #f8f9fa;
}

/* 列宽定义 */
.rank-cell {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.player-cell {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 120rpx;
}

.score-cell,
.multiplier-cell,
.final-cell {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 表头样式 */
.header-cell {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  text-align: center;
}

/* 排名 */
.rank-number {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 玩家信息 */
.player-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-text {
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
}

.player-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 分数样式 */
.score-value,
.final-value {
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
}

.score-value.positive,
.final-value.positive {
  color: #e54d42;
}

.score-value.negative,
.final-value.negative {
  color: #00b050;
}

/* 倍率 */
.multiplier-value {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
  text-align: center;
}

/* 分享按钮 */
.share-section {
  margin-top: 32rpx;
  padding: 0 24rpx;
}

.share-btn {
  width: 100%;
  height: 72rpx;
  background: linear-gradient(135deg, #5a9dff, #4a8cef);
  color: white;
  border: none;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 10rpx rgba(90, 157, 255, 0.3);
}