<!-- 加载状态 -->
<view wx:if="{{status==='loading'}}" class="join__loading">
  <view class="loading-content">
    <view class="loading-icon">🎮</view>
    <text class="loading-text">正在加入房间...</text>
    <progress percent="{{progress}}" show-info stroke-width="4" activeColor="#2E8B57"/>
    <text class="room-info">房间号：{{roomId}}</text>
  </view>
</view>

<!-- 错误状态 -->
<view wx:if="{{status==='error'}}" class="join__error">
  <view class="error-content">
    <view class="error-icon">❌</view>
    <text class="error-title">加入失败</text>
    <text class="error-message">{{errMsg}}</text>
    <view class="error-actions">
      <button class="retry-btn" bindtap="retryJoin">重试</button>
      <button class="home-btn" bindtap="goHome">返回首页</button>
    </view>
  </view>
</view>

