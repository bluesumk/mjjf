.edit-wrap {
  padding: 32rpx;
}

.avatar-box {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.avatar-lg {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  background: #f2f3f5;
}

.field {
  margin: 24rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  padding: 20rpx;
  border: 1rpx solid #e5e6eb;
  border-radius: 12rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.btn-primary {
  margin-top: 40rpx;
  background: #07c160;
  color: #fff;
  border-radius: 999rpx;
  padding: 22rpx 0;
  width: 100%;
  border: none;
}

.btn-outline {
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(0,0,0,.15);
  background: #fff;
  color: #333;
  font-size: 26rpx;
}
