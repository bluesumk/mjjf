/* 牌局明细表页面样式 */
.rounds-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 104rpx;
}



/* 参与者信息 */
.participants-section {
  background-color: #fff;
  padding: 16rpx 24rpx 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.participants-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.participants-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.tai-switch-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tai-label {
  font-size: 24rpx;
  color: #666;
}

.switch-indicator {
  width: 60rpx;
  height: 32rpx;
  background-color: #5a9dff;
  border-radius: 16rpx;
  position: relative;
}

.switch-dot {
  width: 28rpx;
  height: 28rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  transition: all 0.3s ease;
}

/* 参与者行布局 */
.participants-avatars,
.participants-names,
.participants-totals {
  display: flex;
  margin-bottom: 12rpx;
}

.participants-totals {
  margin-bottom: 0;
}

.participant-column {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.participant-name {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

.total-score {
  font-size: 26rpx;
  font-weight: 600;
  text-align: center;
}

.total-score.positive {
  color: #e54d42;
}

.total-score.negative {
  color: #00b050;
}

/* 每局明细列表 */
.rounds-list {
  margin-top: 12rpx;
  background-color: #fff;
}

.list-header {
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

/* 局次项 */
.round-item {
  padding: 12rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.round-item:last-child {
  border-bottom: none;
}

.round-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.round-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.round-time {
  font-size: 20rpx;
  color: #999;
}

/* 分数行 - 表格式布局 */
.scores-row {
  display: flex;
}

.score-column {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 40rpx;
}

.score-value {
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.score-value.positive {
  color: #e54d42;
}

.score-value.negative {
  color: #00b050;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 24rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部操作 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.ranking-btn {
  width: 100%;
  height: 72rpx;
  background: linear-gradient(135deg, #5a9dff, #4a8cef);
  color: white;
  border: none;
  border-radius: 36rpx;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.ranking-btn:active {
  transform: scale(0.98);
  box-shadow: 0 3rpx 10rpx rgba(90, 157, 255, 0.3);
}
