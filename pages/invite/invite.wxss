/* invite.wxss - 邀请页面样式 */
.container {
  padding: 16rpx;
  box-sizing: border-box;
}

/* 参与者与台版开关区域 */
.participants-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f7f8fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.switch-wrapper {
  display: flex;
  align-items: center;
}
.switch-label {
  margin-right: 8rpx;
  font-size: 26rpx;
  color: #333;
}

/* 参与者列表 */
.avatar-list {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 12rpx 0;
  background-color: #f7f8fa;
  border-radius: 12rpx;
}
.avatar-list-inner {
  display: flex;
  align-items: center;
  padding-left: 16rpx;
}
/* 单个参与者 */
.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  margin-right: 24rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ddd;
}
.avatar-name {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #555;
  width: 100rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 新增按钮样式 */
.avatar-item.plus {
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  width: 80rpx;
  height: 80rpx;
}
.plus-icon {
  width: 50rpx;
  height: 50rpx;
}

.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

/* 二维码容器 */
.qr-container {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
  border: 2rpx solid #e0e0e0;
}

.qr-image {
  width: 100%;
  height: 100%;
}



.qr-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.placeholder-img {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999;
}

/* 二维码操作区域 */
.qr-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.qr-text {
  font-size: 26rpx;
  color: #00b050;
  margin-bottom: 12rpx;
}

.qr-buttons {
  display: flex;
  gap: 16rpx;
}

.refresh-btn {
  background-color: #f0f0f0;
  color: #666;
  border: 1rpx solid #ccc;
  font-size: 24rpx;
}

.invite-btn {
  background-color: #00b050;
  color: #fff;
  font-size: 24rpx;
}

/* 邀请码区域 */
.invite-code-section {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
}

.code-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.invite-code {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  letter-spacing: 2rpx;
}

.copy-btn {
  background-color: #007aff;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.start-btn-section {
  margin-top: 24rpx;
  text-align: center;
}
.start-btn {
  width: 90%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  background-color: #00b050;
  color: #fff;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}
.modal-title {
  font-size: 30rpx;
  margin-bottom: 16rpx;
  text-align: center;
}
.modal-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  padding: 0 16rpx;
  border-radius: 8rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  flex-shrink: 0;
  background-color: #f8f9fa;
  color: #333;
}
.modal-buttons {
  display: flex;
  justify-content: space-around;
}