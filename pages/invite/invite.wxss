/* invite.wxss - 邀请页面样式 */
.container {
  padding: 16rpx;
  box-sizing: border-box;
}

/* 参与者与台版开关区域 */
.participants-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f7f8fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.switch-wrapper {
  display: flex;
  align-items: center;
}
.switch-label {
  margin-right: 8rpx;
  font-size: 26rpx;
  color: #333;
}

/* 参与者列表 */
.avatar-list {
  width: 100%;
  margin-bottom: 24rpx;
  padding: 12rpx 0;
  background-color: #f7f8fa;
  border-radius: 12rpx;
}
.avatar-list-inner {
  display: flex;
  align-items: center;
  padding-left: 16rpx;
}
/* 单个参与者 */
.avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  margin-right: 24rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ddd;
}
.avatar-name {
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #555;
  width: 100rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 新增按钮样式 */
.avatar-item.plus {
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  width: 80rpx;
  height: 80rpx;
}
.plus-icon {
  width: 50rpx;
  height: 50rpx;
}

.qr-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.qr-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 16rpx;
  background-color: #f0f0f0;
}
/* 二维码下方提示文字 */
.qr-text {
  font-size: 26rpx;
  color: #00b050;
  margin-bottom: 12rpx;
}
/* 邀请加入按钮 */
.invite-btn {
  margin-top: 4rpx;
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ccc;
  font-size: 26rpx;
}

.start-btn-section {
  margin-top: 24rpx;
  text-align: center;
}
.start-btn {
  width: 90%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  background-color: #00b050;
  color: #fff;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.modal {
  width: 80%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}
.modal-title {
  font-size: 30rpx;
  margin-bottom: 16rpx;
  text-align: center;
}
.modal-input {
  width: 100%;
  border: 1rpx solid #ccc;
  padding: 12rpx;
  border-radius: 6rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}
.modal-buttons {
  display: flex;
  justify-content: space-around;
}