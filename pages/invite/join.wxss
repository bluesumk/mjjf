/* 扫码加入牌局页面样式 */

.join-container {
  padding: 40rpx 32rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* ========== 加载状态 ========== */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* ========== 错误状态 ========== */
.error-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 32rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 48rpx;
}

.error-actions {
  display: flex;
  gap: 24rpx;
}

.error-actions button {
  padding: 16rpx 32rpx;
}

/* ========== 牌局信息 ========== */
.session-info-section {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 牌局标题 */
.session-header {
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.session-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.session-title {
  font-size: 32rpx;
  font-weight: bold;
}

/* 牌局详情 */
.session-details {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.status-ongoing {
  color: #00b050;
}

.status-pending {
  color: #ff6600;
}

/* 参与者列表 */
.participants-section {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.participants-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  margin-bottom: 16rpx;
}

.participant-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.avatar-text {
  font-size: 24rpx;
  font-weight: bold;
  color: white;
}

.participant-name {
  font-size: 24rpx;
  color: #333;
  max-width: 80rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: center;
}

/* 操作按钮 */
.join-actions {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.join-btn {
  background: linear-gradient(135deg, #00b050, #00d98d);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  border-radius: 12rpx;
}

.cancel-btn {
  color: #666;
  font-size: 28rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
}

