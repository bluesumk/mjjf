/* scoring.wxss - 记分页面样式 */

.scoring-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--background-primary);
}

/* ========== 输入阶段样式 ========== */
.input-stage {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 局数标题 */
.round-header {
  text-align: center;
  padding: 20rpx 0;
}

.round-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* ========== 计分表格样式 ========== */
.scoring-table {
  background-color: var(--background-secondary);
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: var(--shadow-light);
}

/* 表头样式 */
.table-header {
  display: flex;
  background-color: #f5f5f5;
  border-bottom: 2rpx solid var(--border-color);
}

.header-cell {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary);
  text-align: center;
}

.name-cell {
  flex: 2;
  text-align: left;
}

.role-cell {
  flex: 2;
}

.score-cell {
  flex: 1.5;
}

/* 表格行样式 */
.table-row {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid var(--border-color);
  min-height: 120rpx;
}

.table-row:last-child {
  border-bottom: none;
}

/* 名称单元格 */
.table-row .name-cell {
  flex: 2;
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
}

.player-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.tai-avatar {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
}

.avatar-text {
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.player-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 胜负单元格 */
.table-row .role-cell {
  flex: 2;
  display: flex;
  justify-content: center;
  padding: 16rpx;
}

.role-buttons {
  display: flex;
  gap: 8rpx;
}

.role-btn {
  width: 60rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 2rpx solid var(--border-color);
  background-color: var(--background-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.win-btn.active {
  background-color: #E74C3C;
  border-color: #E74C3C;
  color: white;
}

.lose-btn.active {
  background-color: #27AE60;
  border-color: #27AE60;
  color: white;
}

.role-btn.active {
  color: white;
}

.role-text {
  font-size: 24rpx;
  font-weight: 500;
}

.role-btn.active .role-text {
  color: white;
}

.tai-no-role {
  font-size: 28rpx;
  text-align: center;
}

/* 分数单元格 */
.table-row .score-cell {
  flex: 1.5;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16rpx;
}

.score-input {
  width: 80rpx;
  height: 60rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  background-color: var(--background-secondary);
  color: var(--text-primary);
}

.score-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2rpx rgba(46, 139, 87, 0.2);
}

.auto-score {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary);
  text-align: center;
  width: 80rpx;
}

.tai-input {
  border-color: #4A90E2;
  background-color: #F0F8FF;
}

.tai-input:focus {
  border-color: #4A90E2;
  box-shadow: 0 0 0 2rpx rgba(74, 144, 226, 0.2);
}

/* ========== 操作按钮样式 ========== */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 40rpx 0 20rpx;
  justify-content: center;
}

.confirm-btn, .cancel-btn {
  min-width: 160rpx;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.confirm-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
}

.confirm-btn:disabled {
  background: var(--text-light);
  color: #999;
}

.cancel-btn {
  background-color: var(--background-secondary);
  color: var(--text-secondary);
  border: 2rpx solid var(--border-color);
}

/* 提示卡片 */
.tip-card {
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border-left: 4rpx solid var(--warning-color);
}

.tip-content {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tip-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  line-height: 1.4;
}

/* 玩家列表 */
.players-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.player-card {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 玩家信息头部 */
.player-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.player-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-text {
  color: white;
  font-size: 20rpx;
  font-weight: 600;
}

.player-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  flex: 1;
}

.player-status {
  font-size: 22rpx;
}

/* 胜负选择区域 */
.role-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-label {
  font-size: 22rpx;
  font-weight: 500;
}

.role-buttons {
  display: flex;
  gap: 12rpx;
}

.role-btn {
  flex: 1;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  border: 2rpx solid var(--border-color);
  background-color: var(--background-secondary);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.role-btn.active.win {
  background: linear-gradient(135deg, var(--success-color), #2ECC71);
  border-color: var(--success-color);
  color: white;
}

.role-btn.active.lose {
  background: linear-gradient(135deg, var(--text-light), #95A5A6);
  border-color: var(--text-light);
  color: white;
}

.role-btn:active {
  transform: scale(0.95);
}

.role-icon {
  font-size: 20rpx;
}

.role-text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 分数输入区域 */
.score-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.score-input {
  padding: 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: 600;
}

.auto-score {
  padding: 16rpx;
  background-color: var(--background-primary);
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.auto-score-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.auto-label {
  font-size: 20rpx;
}

/* 总分显示 */
.sum-display {
  padding: 20rpx;
  background: linear-gradient(135deg, var(--background-primary), #F8FFF8);
}

.sum-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sum-label {
  font-size: 24rpx;
}

.sum-value {
  font-size: 32rpx;
  font-weight: 700;
}

.sum-value.balanced {
  color: var(--success-color);
}

.sum-value.unbalanced {
  color: var(--danger-color);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 8rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.btn-icon {
  font-size: 20rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* ========== 结果阶段样式 ========== */
.summary-stage, .final-stage {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 结果头部 */
.summary-header, .final-header {
  padding: 24rpx;
  text-align: center;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
}

.summary-title, .final-title {
  color: white;
  margin-bottom: 8rpx;
}

.summary-subtitle, .final-subtitle {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 结果列表 */
.summary-list, .final-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.summary-item, .final-item {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.final-item {
  position: relative;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 排名徽章 */
.rank-badge {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: var(--text-light);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.rank-badge.champion {
  background: linear-gradient(135deg, var(--accent-color), #FFE135);
}

.rank-number {
  font-size: 20rpx;
  font-weight: 700;
  color: white;
}

.rank-badge.champion .rank-number {
  color: var(--text-primary);
}

.summary-player, .final-player {
  flex: 1;
}

.summary-name, .final-name {
  line-height: 1.2;
}

/* 分数显示 */
.summary-score, .final-score {
  display: flex;
  align-items: center;
}

.score-value, .final-value {
  font-size: 32rpx;
  font-weight: 700;
}

.positive {
  color: var(--success-color);
}

.negative {
  color: var(--danger-color);
}

/* 操作按钮 */
.summary-actions, .final-actions {
  display: flex;
  gap: 16rpx;
}

.next-round-btn, .finish-btn, .home-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

/* ========== 弹窗样式 ========== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

.modal-container {
  width: 80%;
  max-width: 400rpx;
  padding: 32rpx 24rpx;
  animation: bounceIn 0.5s ease;
}

.modal-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.modal-body {
  margin-bottom: 32rpx;
}

.multiplier-input {
  width: calc(100% - 32rpx);
  max-width: 300rpx;
  padding: 16rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  font-weight: 600;
  margin: 0 auto 12rpx auto;
  display: block;
  box-sizing: border-box;
}

.multiplier-tip {
  font-size: 22rpx;
  text-align: center;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-cancel, .modal-confirm {
  flex: 1;
  padding: 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}