/* pages/session/create/index.wxss */
/* 继承原有的invite页面样式 */
@import "/pages/invite/invite.wxss";

/* 分享按钮禁用状态样式 */
.share-btn:disabled {
  background-color: #f5f5f5 !important;
  color: #cccccc !important;
  border-color: #e0e0e0 !important;
}

.share-btn:disabled:hover {
  background-color: #f5f5f5 !important;
}

/* 分享按钮灰态样式（占位，不影响主按钮） */
.share-btn--disabled {
  background: #E5E6EB;
  color: #9AA1A9;
}

/* 抬层 + 保证可点 */
.share-btn {
  position: relative;
  z-index: 10;
  pointer-events: auto;
}

/* 让可能的覆盖层"不吃点" */
.mask, .overlay, .qr-overlay, .card-mask {
  pointer-events: none !important;
}

/* 调试分享按钮样式 */
.share-debug {
  position: fixed;
  right: 24rpx;
  bottom: 180rpx;
  z-index: 9999;
  padding: 16rpx 24rpx;
  background: #1677FF;
  color: #fff;
  border-radius: 12rpx;
}

/* ========== 添加参与者弹窗优化样式 ========== */

/* 蒙层：铺满并留出安全区内边距，防止顶到边 */
.modal-mask {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.45);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: env(safe-area-inset-top) 24rpx env(safe-area-inset-bottom);
  box-sizing: border-box;
}

/* 面板：宽度自适配，小屏不超边，大屏不超过 640rpx */
.modal-panel {
  width: calc(100vw - 64rpx);   /* 距左右各保留 32rpx 视觉安全距 */
  max-width: 640rpx;
  max-height: 70vh;             /* 键盘/小屏时可滚动而不是溢出 */
  overflow: auto;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(0,0,0,.12);
  padding: 28rpx;
  box-sizing: border-box;
}

/* 标题与输入框 */
.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e5e6eb;
  border-radius: 16rpx;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  width: 100%;
  font-size: 28rpx;
}

/* 按钮区：两列等宽、可点区域足够大 */
.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-actions .btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
  text-align: center;
  border: none;
  cursor: pointer;
}

.modal-actions .btn.ghost {
  background: #fff;
  border: 1rpx solid #e5e6eb;
  color: #333;
}

.modal-actions .btn.primary {
  /* 保持现有主题色；若项目已有主按钮类，可复用 */
  background: #22c55e;
  color: #fff;
}

