/* pages/session/create/index.wxss */
/* 继承原有的invite页面样式 */
@import "/pages/invite/invite.wxss";

/* 分享按钮禁用状态样式 */
.share-btn:disabled {
  background-color: #f5f5f5 !important;
  color: #cccccc !important;
  border-color: #e0e0e0 !important;
}

.share-btn:disabled:hover {
  background-color: #f5f5f5 !important;
}

/* 分享按钮灰态样式（占位，不影响主按钮） */
.share-btn--disabled {
  background: #E5E6EB;
  color: #9AA1A9;
}

/* 抬层 + 保证可点 */
.share-btn {
  position: relative;
  z-index: 10;
  pointer-events: auto;
}

/* 让可能的覆盖层"不吃点" */
.mask, .overlay, .qr-overlay, .card-mask {
  pointer-events: none !important;
}

/* 调试分享按钮样式 */
.share-debug {
  position: fixed;
  right: 24rpx;
  bottom: 180rpx;
  z-index: 9999;
  padding: 16rpx 24rpx;
  background: #1677FF;
  color: #fff;
  border-radius: 12rpx;
}

