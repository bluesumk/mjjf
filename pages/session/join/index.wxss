/* pages/session/join/index.wxss */

.join-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--background-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* ========== 错误状态 ========== */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  text-align: center;
  padding: 40rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.error-message {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.error-actions {
  display: flex;
  gap: 16rpx;
}

.retry-btn, .home-btn {
  min-width: 120rpx;
  height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* ========== 成功状态 ========== */
.success-state {
  width: 100%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 会话信息卡片 */
.session-info {
  padding: 32rpx;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--border-color);
}

.session-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.session-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.session-status.ongoing {
  background-color: #E8F5E8;
  color: var(--success-color);
}

.session-status.pending {
  background-color: #FFF3E0;
  color: var(--warning-color);
}

/* 会话详情 */
.session-details {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.detail-value {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.detail-value.enabled {
  color: var(--success-color);
}

/* 参与者部分 */
.participants-section {
  margin-top: 16rpx;
}

.section-title {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: block;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.participant-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: var(--background-primary);
  border-radius: 20rpx;
  border: 2rpx solid var(--border-color);
}

.participant-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-text {
  color: white;
  font-size: 20rpx;
  font-weight: 600;
}

.participant-name {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* ========== 操作按钮 ========== */
.join-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.join-btn, .cancel-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.join-btn {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  color: white;
}

.join-btn:disabled {
  background: var(--text-light);
  color: #999;
}

.cancel-btn {
  background-color: var(--background-secondary);
  color: var(--text-secondary);
  border: 2rpx solid var(--border-color);
}
