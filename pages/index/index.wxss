/* 首页样式 */
.home-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 文字样式类 */
.title-medium {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.title-small {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-success {
  color: var(--success-color);
}

.text-danger {
  color: var(--danger-color);
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.6s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户信息区域 */
.header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
  border-radius: 50%;
  opacity: 0.1;
  transform: translate(30rpx, -30rpx);
}

.header-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar-container {
  position: relative;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid var(--primary-color);
  background-color: var(--background-secondary);
}

.default-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  border: 3rpx solid var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.welcome-text {
  font-size: 24rpx;
}

.header-decoration {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mahjong-emoji {
  font-size: 48rpx;
  opacity: 0.8;
}

/* 快速操作区域 */
.quick-actions {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
}

.action-card {
  flex: 1;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.primary-bg {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
}

.secondary-bg {
  background: linear-gradient(135deg, var(--secondary-color), #FF8C42);
}

.icon-text {
  font-size: 24rpx;
}

.action-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.action-title {
  line-height: 1.2;
}

.action-desc {
  font-size: 24rpx;
  line-height: 1.2;
}

.action-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
}

.arrow-text {
  font-size: 32rpx;
  color: var(--text-light);
  font-weight: 300;
}

/* 统计概览 */
.stats-overview {
  padding: 24rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.stats-period {
  font-size: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 8rpx;
  background-color: var(--background-primary);
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  line-height: 1;
}

.stat-label {
  font-size: 22rpx;
  line-height: 1;
}

/* 最近对局 */
.recent-games {
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.more-link {
  font-size: 24rpx;
  cursor: pointer;
}

.games-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.game-item {
  background-color: var(--background-primary);
  border-radius: 10rpx;
  padding: 12rpx;
  border: 1rpx solid var(--border-color);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.game-item:active {
  transform: scale(0.98);
  background-color: #f8f9fa;
}

/* 状态标识 */
.status-text {
  font-size: 18rpx;
  color: var(--text-light);
  background-color: #f0f0f0;
  padding: 0 4rpx;
  border-radius: 4rpx;
  margin-left: 8rpx;
  display: inline-block;
  line-height: 1.1;
  vertical-align: baseline;
}

.status-ongoing {
  color: #00b050;
}

.status-finished {
  color: #666;
}

/* 玩家信息展示，水平平均分布 */
.players-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  margin: 2rpx 0;
}

.player {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rpx;
}

.player-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #fff;
  font-size: 18rpx;
  font-weight: bold;
}

.player-name {
  font-size: 18rpx;
  color: #333;
  max-width: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  margin-bottom: -1rpx;
}

.player-score {
  font-size: 20rpx;
  font-weight: normal;
}

.player-score.positive {
  color: #e54d42;
}

.player-score.negative {
  color: #00b050;
}

/* 底部信息 */
.game-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 6rpx;
  border-top: 1rpx solid var(--border-color);
  margin-top: 2rpx;
}

.footer-left {
  display: flex;
  align-items: center;
}

.game-date {
  font-size: 20rpx;
  color: var(--text-light);
}

.game-rounds {
  font-size: 18rpx;
  color: var(--text-light);
  background-color: #f0f0f0;
  padding: 1rpx 4rpx;
  border-radius: 4rpx;
}

/* 空状态 */
.empty-games {
  padding: 24rpx;
}

.empty-state .icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-state .title {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.empty-state .desc {
  font-size: 24rpx;
  color: var(--text-light);
}

/* --- BG: 页面底色统一为浅灰 --- */
page { background: #F5F6F7; }
/* 根容器/页面容器底色（仅作用于本页根容器） */
.container, .home-container { background: #F5F6F7 !important; }