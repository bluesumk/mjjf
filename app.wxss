/* app.wxss */
/**
 * 全局样式文件，用于定义应用中的通用样式和变量。
 * 微信小程序支持类似 CSS 的语法。
 */

/* 设计系统颜色变量 */
page {
  --primary-color: #2E8B57;
  --primary-light: #3CB371;
  --primary-dark: #228B22;
  --secondary-color: #FF6B35;
  --accent-color: #FFD700;
  --text-primary: #2C3E50;
  --text-secondary: #7F8C8D;
  --text-light: #BDC3C7;
  --background-primary: #F8FFFE;
  --background-secondary: #FFFFFF;
  --border-color: #E8F5E8;
  --shadow-light: 0 2rpx 8rpx rgba(46, 139, 87, 0.08);
  --shadow-medium: 0 4rpx 16rpx rgba(46, 139, 87, 0.12);
  --danger-color: #E74C3C;
  --success-color: #27AE60;
  --warning-color: #F39C12;
}

/* 容器默认填充和背景 */
.container {
  padding: 20rpx;
  background: #F5F6F7;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片通用样式 */
.card {
  background-color: var(--background-secondary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-light);
  border: 2rpx solid var(--border-color);
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(2rpx);
  box-shadow: var(--shadow-medium);
}

/* 按钮系统重设计 */
button {
  margin: 8rpx 0;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
}

button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  transition: left 0.5s;
}

button:active::before {
  left: 100%;
}

/* 主要按钮 */
button[type="primary"] {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: white;
  box-shadow: var(--shadow-light);
}

button[type="primary"]:active {
  background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-color) 100%);
  transform: translateY(2rpx);
}

/* 默认按钮 */
button[type="default"] {
  background-color: var(--background-secondary);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
  box-shadow: var(--shadow-light);
}

button[type="default"]:active {
  background-color: var(--border-color);
  transform: translateY(2rpx);
}

/* 警告按钮 */
button[type="warn"] {
  background: linear-gradient(135deg, var(--danger-color) 0%, #C0392B 100%);
  color: white;
  box-shadow: var(--shadow-light);
}

button[type="warn"]:active {
  background: linear-gradient(135deg, #C0392B 0%, #A93226 100%);
  transform: translateY(2rpx);
}

/* 小号按钮 */
button[size="mini"] {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

/* 输入框样式 */
input {
  background-color: var(--background-secondary);
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 28rpx;
  color: var(--text-primary);
  transition: all 0.3s ease;
}

input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(46, 139, 87, 0.1);
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

.text-success {
  color: var(--success-color);
  font-weight: 600;
}

.text-danger {
  color: var(--danger-color);
  font-weight: 600;
}

.text-warning {
  color: var(--warning-color);
  font-weight: 600;
}

/* 小提示文本 */
.tip {
  color: var(--text-secondary);
  font-size: 24rpx;
}

/* 标题样式 */
.title-large {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.3;
}

.title-medium {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.3;
}

.title-small {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.3;
}

/* 分隔线 */
.divider {
  height: 2rpx;
  background-color: var(--border-color);
  margin: 16rpx 0;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  color: var(--text-secondary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx 32rpx;
  text-align: center;
}

.empty-state .icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 16rpx;
}

.empty-state .title {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.empty-state .desc {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.bounce-in {
  animation: bounceIn 0.5s ease;
}

@keyframes bounceIn {
  0% { transform: scale(0.9); opacity: 0; }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); opacity: 1; }
}

/* 新增：加入页面相关样式 */
.join__loading { 
  padding: 60rpx 24rpx; 
  text-align: center;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-icon {
  font-size: 80rpx;
  animation: bounce 1.5s infinite;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
}

.room-info {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
}

.join__error { 
  padding: 60rpx 24rpx; 
  text-align: center;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.error-icon {
  font-size: 80rpx;
}

.error-title {
  font-size: 36rpx;
  color: var(--danger-color);
  font-weight: 600;
}

.error-message {
  font-size: 28rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 1.5;
}

.error-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.retry-btn, .home-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn {
  background-color: var(--primary-color);
  color: white;
}

.home-btn {
  background-color: var(--background-secondary);
  color: var(--text-primary);
  border: 2rpx solid var(--border-color);
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20rpx);
  }
  60% {
    transform: translateY(-10rpx);
  }
}

/* 新增：个人资料卡片相关样式 */
.profile-card { 
  display: flex; 
  align-items: center; 
  padding: 24rpx; 
}

.profile-card .avatar { 
  width: 96rpx; 
  height: 96rpx; 
  border-radius: 50%; 
  margin-right: 16rpx; 
}

/* 新增：按钮轮廓样式 */
.btn-outline {
  background-color: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.btn-outline:disabled {
  border-color: var(--text-light);
  color: var(--text-light);
}